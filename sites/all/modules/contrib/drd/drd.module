/**
 * @param string $url
 * @return bool|stdClass
 */
function drd_domain_load_by_url($url) {
  $did = db_select('drd_domain', 'd')
    ->fields('d', array('did'))
    ->condition('d.url', $url)
    ->execute()
    ->fetchField();
  if (empty($did)) {
    // Domain does not exist yet.
    $domain = db_select('drd_server', 's')
      ->fields('s', array('sid', 'name', 'url', 'usessl', 'status'))
      ->condition('s.url', $url)
      ->execute()
      ->fetchObject();
    if (empty($domain)) {
      drupal_set_message('Critical error: there is no domain for the url ' . $url, 'error');
      return FALSE;
    }
    drupal_write_record('drd_domain', $domain);
    return $domain;
  }
  return drd_domain_load($did);
}

