    drupal_add_css(drupal_get_path('module', 'drd') . '/drd.css', array('group' => CSS_THEME + 1));
    drupal_add_js(drupal_get_path('module', 'drd') . '/drd.js', array('group' => JS_THEME + 1));
    drupal_add_js(array(
      'drd' => array(
        'parallelAjaxThreads' => 10,
        'urlAjax' => url('drd/ajax/detail/')
      )), 'setting');
  }
}

