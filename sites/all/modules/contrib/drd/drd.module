}

/**
 * @param string $mode
 * @param int $id
 * @param string $function
 * @param string $execution
 */
function drd_log($mode, $id, $function, $execution = 'execute') {
  $object = drd_object_by_id($mode, $id);
  if (is_string($function)) {
    $message = '!execution: !action for !name';
    $message_args = array(
      '!execution' => $execution,
      '!action' => $function,
      '!name' => $object->url,
    );
  }
  else {
    $message = 'XMLRPC on !url: <pre>!params</pre>';
    $message_args = array(
      '!url' => $object->url,
      '!params' => print_r($function, TRUE),
    );
  }
  if (variable_get('drd_debug', FALSE)) {
    watchdog('DRD', $message, $message_args);
  }
  if (function_exists('drush_log')) {
    if (in_array($execution, drd_drush_log_parts())) {
      drush_log(t($message, $message_args), 'ok');
    }
  }
}

