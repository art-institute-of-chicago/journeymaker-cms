/**
 * Implements hook_file_download().
 */
function drd_file_download($uri) {
  if (strpos(file_uri_target($uri), 'drd_debug_') === 0) {
    if (user_access('administer drd')) {
      return array('Pragma' => 'public',
        'Expires' => 0,
        'Cache-Control' => 'must-revalidate, post-check=0, pre-check=0',
        'Content-Type' => 'application/force-download'
      );
    }
  }
  return NULL;
}

/** ======================================================================
 *
 * Actions
 *
 */

/**
 * @param string|null $action_name
 * @return array
 */
function drd_actions($action_name = NULL) {
  static $actions;
  if (!isset($actions)) {
    $actions = module_invoke_all('drd_actions');
  }
  if (isset($action_name)) {
    return (empty($actions[$action_name])) ? array() : $actions[$action_name];
  }
  return $actions;
}

/**
 * Main function to determine which actions to execute on selected
 * Drupal cores and/or domains and in which way.
 *
 * @param string $mode
 * @param array $ids
 * @param string $action_name
 * @param bool $goto
 */
function drd_action($mode, $ids, $action_name, $goto = TRUE) {
  $goto_mode = $mode;
  $action = drd_actions($action_name);
  $action['follower'] = isset($action['follower']) ? $action['follower'] : array();
  if (!empty($action['drush'])) {
    $function = 'drd_drush_action_remote';
    $action['file'] = 'drd.drush.inc';
  }
  else if (empty($action['remote'])) {
    $function = $action['callback'];
  }
  else {
    $function = 'drd_action_remote';
  }
  if (empty($action['remote']) && !empty($action['file']) && is_file(drupal_get_path('module', 'drd') . '/' . $action['file'])) {
    include_once $action['file'];
  }
  if (function_exists($function)) {
    $values = array();
    if (!empty($action['fields'])) {
      foreach ($action['fields'] as $key => $def) {
        # Support FAPI file field
        if (isset($def['#type']) && $def['#type'] == 'file') {
          if (!empty($_FILES['files']['tmp_name'][$key])) {
            $filename = $_FILES['files']['tmp_name'][$key];
            $values[] = array(
              'name' => $_FILES['files']['name'][$key],
              'tmp_name' => $_FILES['files']['tmp_name'][$key],
              'type' => $_FILES['files']['type'][$key],
              'size' => $_FILES['files']['size'][$key],
              'content' => base64_encode(file_get_contents($filename)),
            );
            drupal_unlink($filename);
          }
        }
        elseif (!empty($def['#markup']) || (isset($def['#type']) && $def['#type'] != 'hidden')) {
          $action['fields'][$key]['#value'] = isset($_POST[$key]) ? $_POST[$key] : 0;
          $values[] = $action['fields'][$key]['#value'];
        }
        else {
          $values[] = $def['#value'];
        }
      }
    }

    //allow users to hook into this process
    foreach (module_implements('drd_action_preprocess') as $module) {
        $func = $module . '_drd_action_preprocess';
        // pass through the current arguments plus the values
        $func($mode, $ids, $action_name, $action, $values);
    }

    if ($action_name == 'drd.actions') {
      // Check if we need to reset current values
      if (!empty($_POST['reset'])) {
        variable_del('drd_actions');
      }
      $mode = 'domain';
      $goto_mode = 'server';
      $sids = $ids;
      $ids = array();
      foreach ($sids as $id) {
        $dids = drd_server_domains($id);
        $ids = array_merge($ids, $dids);
      }
    }
    foreach ($ids as $id) {
      $args = array_merge(array($action_name, $mode, $id), $values);
      if (empty($action['drush']) && empty($action['queue'])) {
        _drd_call_user_func_array($mode, $id, $function, $args, $action['follower']);
      }
      else {
        drd_log($mode, $id, $action_name, 'queue');
        $queue = DrupalQueue::get('drd');
        $q = array(
          'mode' => $mode,
          'id' => $id,
          'action' => $action_name,
          'function' => $function,
          'args' => $args,
          'follower' => $action['follower'],
          'file' => empty($action['file']) ? FALSE : $action['file'],
        );
        $queue->createItem($q);
      }
    }
    if ($action_name == 'drd.actions') {
      drd_action('server', $sids, 'drd.actions.drush', FALSE);
    }
  }
  if ($goto) {
    if ($goto_mode == 'server') {
      drupal_goto('admin/drd');
    }
    drupal_goto('admin/drd/domains');
  }
}

/**
 * @param array $item
 * @return array|bool
 */
function drd_action_queue($item) {
  if ($item['file']) {
    include_once $item['file'];
  }
  if (function_exists($item['function'])) {
    $action = drd_actions($item['action']);
    $object = ($item['mode'] == 'server') ? drd_server_load($item['id']) : drd_domain_load($item['id']);
    $args = array(
      '%op' => $action['label'],
      '%mode' => $item['mode'],
      '@name' => $object->name,
      '%id' => $item['id'],
    );
    $hash = md5(implode('', $args));
    $info = '<span id="' . $hash . '">...</span>' . t('%op on %mode @name (ID %id)', $args);
    $infoQueue = DrupalQueue::get('drd.info');
    $infoQueue->createItem($info);

    _drd_call_user_func_array($item['mode'], $item['id'], $item['function'], $item['args'], $item['follower']);
    $infoQueue->createItem(array('completed' => $hash,));
    if (!empty($action['refresh'])) {
      // Return the id of the changed object, so that this can be updated in the dashboard
      return array($item['mode'], $item['id']);
    }
  }
  return FALSE;
}

/**
 * Main function to execute actions on remote Drupal cores.
 *
 * @param string $action_name
 * @param string $mode
 * @param int $id
 * @return mixed
 */
function drd_action_remote($action_name, $mode, $id) {
  // Check if domain has DRD installed and is active
  if ($mode == 'domain') {
    $domain = drd_domain_load($id);
    if (!$domain->installed) {
      if ($action_name != 'drd.heartbeat' && $action_name != 'drd.status') {
        drd_set_message($domain, 'Skipping domain ' . $id . ': DRD not installed.');
      }
      return;
    }
  }
  else {
    $domain = NULL;
  }

  // Check if Drupal core or domain is active or not
  $server = drd_server_load($id, $mode);
  $server_domain = ($mode == 'domain') ? $domain : $server;
  if (!$server_domain->status) {
    if ($action_name != 'drd.heartbeat' && $action_name != 'drd.status') {
      drd_set_message($server_domain, 'Skipping ' . $mode . ' ' . $id . ' (' . $server_domain->url . '): Disabled in dashboard.');
    }
    return;
  }

  require_once DRUPAL_ROOT . '/includes/xmlrpc.inc';
  $args = func_get_args();
  $action_name = array_shift($args);
  $mode = array_shift($args);
  $id = array_shift($args);
  $url = drd_url_by_id($mode, $id) . '/xmlrpc.php';

  $original_op = $action_name;

  array_unshift($args, DRD_API_VERSION, REQUEST_TIME, language_default('language'), variable_get('drd_debug', FALSE));

  $log_info = array($action_name);
  if ($action_name == 'drd.key') {
    if (empty($args[4])) {
      // Update all domains
      array_push($args, $server->aes_key, $server->aes_cipher, $server->aes_iv, $server->aes_impl);
      if (variable_get('drd_cluster_mode', FALSE)) {
        array_push($args, variable_get('drd_cluster_mode_token'));
      }
    }
  }
  else {
    if ($action_name == 'drd.heartbeat') {
      $unencrypted = array(2, 3);
      $last = db_select('drd_monitor_values', 'mv')
          ->fields('mv', array('timestamp'))
          ->condition('mv.did', $id)
          ->orderBy('mv.timestamp', 'DESC')
          ->range(0, 1)
          ->execute()
          ->fetchField();
      $period = ($last) ? (REQUEST_TIME - $last) : (REQUEST_TIME - (60*5));
      array_push($args, $period);
    }
    else if ($action_name == 'drd.status') {
      $unencrypted = array(2, 3);
    }
    else if (($action_name == 'drd.config.server.read') || ($action_name == 'drd.config.domain.read')) {
      $unencrypted = array(2, 3);
    }
    else if (($action_name == 'drd.config.server.save') || ($action_name == 'drd.config.domain.save')) {
      $unencrypted = array(2, 3);
    }
    else if ($action_name == 'drd.retrieve.blocks') {
      $unencrypted = array(2, 3);
    }
    else if ($action_name == 'drd.config.svn.read') {
      $unencrypted = array(2, 3);
    }
    else {
      array_unshift($args, $action_name);
      $action_name = 'drd.execute';
      $unencrypted = array(3, 4);
    }
    $log_info['args'] = $args;
    foreach ($args as $i => $value) {
      if (!empty($value) && !in_array($i, $unencrypted)) {
        if (is_array($value) || is_object($value)) {
          $value = drupal_json_encode($value);
        }
        $args[$i] = aes_encrypt($value, TRUE, $server->aes_key, $server->aes_cipher, $server->aes_iv, $server->aes_impl);
      }
    }
  }
  drd_log($mode, $id, $action_name, 'remote');
  $options = array('timeout' => 300, 'max_redirects' => 0);
  $output = _drd_xmlrpc($url, $action_name, $args, $options);
  if ($output === FALSE) {
    $error = xmlrpc_error();
    if (!is_object($error)) {
      drd_set_message($url, 'Unknown error: ' . print_r($error, TRUE), 'error');
    }
    else if ($error->code == -32700) {
      // Not well formed
      // Possible reasons:
      // - remote site has not the right module installed
      // - error occurred
      // - AES config mismatch
      drd_set_message($url, 'Error occurred remotely, looks like drd_server is not properly installed', 'error');
    }
    else if ($error->code == 302) {
      drd_set_message($url, t('Error (302): Redirect for url %url to %target', array('%target' => $error->message, '%url' => $url)), 'error');
    }
    else {
      $error->message = isset($error->message) ? $error->message : 'unknown';
      drd_set_message($url, t('Error (%code): %message for url %url', array('%code' => $error->code, '%message' => $error->message, '%url' => $url)), 'error');
    }
    return;
  }
  if (empty($output)) {
    return;
  }

  if (substr($output, 0, 1) === '{' && substr($output, -1) === '}') {
    // not encrypted
  }
  else {
    $output = aes_decrypt($output, TRUE, $server->aes_key, $server->aes_cipher, $server->aes_iv, $server->aes_impl);
  }
  $output = drupal_json_decode($output);
  $log_info['result'] = $output;
  drd_log($mode, $id, $log_info, 'xmlrpc');

  if (is_array($output) && !empty($output['is_error'])) {
    $error = new stdClass();
    $error->code = $output['code'];
    $error->message = $output['message'];
    drd_set_message($url, $error->message, 'error');
    switch ($error->code) {
      case DRD_ERROR_WRONG_API:
        drd_set_message($url, 'Please make sure that you use corresponding versions of DRD (here) and DRD_SERVER on your remote Drupal core at ' . $server_domain->url, 'error');
        break;
      case DRD_ERROR_WRONG_REFERER:
      case DRD_ERROR_NO_REFERER:
        $query = drupal_get_destination();
        $query['goto'] = '1';
        $query['destination'] = 'admin/drd' . (($mode == 'domain') ? '/domains' : '');
        $query['drd-extras'] = '1';
        drd_set_message($url, 'Please go to the ' . l('config page', drd_url($server_domain) . '/admin/config/system/drd_settings', array('attributes' => array('target' => '_blank'))), 'error');
        if (variable_get('drd_cluster_mode', FALSE)) {
          drd_set_message($url, 'Enter the token (' . variable_get('drd_cluster_mode_token') . ') as an allowed referer IP address and add the above IP address into the cluster IPs.', 'error');
        }
        drd_set_message($url, 'After that ' . l('click here', 'admin/drd/' . $mode . '/' . $id . '/pushaes', array('query' => $query)) . ' to push the encryption keys to the remote Drupal core/domain.', 'error');
        break;
      case DRD_ERROR_NO_OP:
      case DRD_ERROR_NO_FUNC:
      case DRD_ERROR_NO_LOG_PHP:
        break;
      case DRD_ERROR_MISSING_AES:
        drd_set_message($url, 'Please go to the ' . l('module list', drd_url($server_domain) . '/admin', array('attributes' => array('target' => '_blank'))), 'error');
        break;
      case DRD_ERROR_WRONG_KEYS:
        drd_set_message($url, 'Please ' . l('edit Drupal core', 'admin/drd/server/' . $server->sid . '/edit') . ' and assign new encryption keys.', 'error');
        break;
    }
    return;
  }

  if (!empty($output['messages'])) {
    drd_store_messages($mode, $id, $output['messages']);
  }
  if ($mode == 'domain' &&
      is_array($output) &&
      !empty($output['message']) &&
      is_array($output['message']) &&
      !empty($output['message']['cache']['info']['domain']['arguments']['variables']['requirements'])) {
    $values = _drd_update_domain_requirements(
      $output['message']['cache']['info']['domain']['arguments']['variables']['requirements'],
      $domain->settings['ignore'],
      TRUE,
      _drd_cache_id('domain', $id, 'status:')
    );
    $output['message']['cache']['info']['domain']['hidden'] = TRUE;
    $output['message']['cache']['info']['server'] = $output['message']['cache']['info']['domain'];
    $output['message']['cache']['info']['server']['arguments']['variables']['requirements'] = array_pop($values);
    if (!empty($values)) {
      db_update('drd_domain')
        ->fields($values)
        ->condition('did', $id)
        ->execute();
    }
  }

  if (!empty($output['message']) && is_array($output['message'])) {
    if (!empty($output['message']['cache'])) {
      // Remove cache data about project updates to make sure we don't get outdated status.
      cache_clear_all(_drd_cache_id('domain', $id, 'update'), 'cache_drd');
      foreach ($output['message']['cache'] as $type => $cache) {
        if ($mode == 'domain' && isset($output['message']['cache'][$type]['domain'])) {
          cache_set(_drd_cache_id('domain', $id, $type), $output['message']['cache'][$type]['domain'], 'cache_drd');
        }
        if (isset($output['message']['cache'][$type]['server'])) {
          cache_set(_drd_cache_id('server', $server->sid, $type), $output['message']['cache'][$type]['server'], 'cache_drd');
        }
      }
    }

    if (!empty($output['message']['drd_db'])) {
      foreach ($output['message']['drd_db'] as $table => $def) {
        switch ($def['mode']) {
          case 'update':
            $query = db_update($table);
        }
        if (isset($query)) {
          $where = format_string($def['where'], array('@id' => $id, '@sid' => $server->sid));
          $query->fields(array($def['field'] => $def['value']))
            ->where($where)
            ->execute();
        }
      }
    }

    if (!empty($output['message']['projects'])) {
      include_once 'drd.modules.inc';
      $domain_mode = ($mode == 'domain');
      $projects_domain = $domain_mode ? $domain : drd_domain_load_by_url($server->url);
      if (!empty($projects_domain)) {
        _drd_update_projects($output['message']['projects'], $projects_domain, !$domain_mode);
      }
    }
  }

  switch ($original_op) {
    case 'drd.key':
      return TRUE;
    case 'drd.status':
      return $output['message'];
    case 'drd.heartbeat':
      $values = array(
        'did' => $id,
        'timestamp' => REQUEST_TIME,
        'user_accounts' => $output['message']['count']['user']['all'],
        'user_sessions' => $output['message']['count']['user']['sessions'],
        'user_authenticated' => $output['message']['count']['user']['auth'],
        'node_count' => $output['message']['count']['content']['node'],
        'comment_count' => $output['message']['count']['content']['comment'],
        'files_temp_count' => $output['message']['file']['temp']['count'],
        'files_temp_size' => $output['message']['file']['temp']['size'],
        'files_perm_count' => $output['message']['file']['perm']['count'],
        'files_perm_size' => $output['message']['file']['perm']['size'],
        'watchdog_emergency' => $output['message']['watchdog']['emergency'],
        'watchdog_alert' => $output['message']['watchdog']['alert'],
        'watchdog_critical' => $output['message']['watchdog']['critical'],
        'watchdog_error' => $output['message']['watchdog']['error'],
        'watchdog_warning' => $output['message']['watchdog']['warning'],
        'watchdog_notice' => $output['message']['watchdog']['notice'],
        'watchdog_info' => $output['message']['watchdog']['info'],
        'watchdog_debug' => $output['message']['watchdog']['debug'],
      );
      drupal_write_record('drd_monitor_values', $values);
      return theme('drd_heartbeat', array('heartbeat' => $output['message']));
    case 'drd.config.svn.read':
    case 'drd.retrieve.blocks':
    case 'drd.config.server.read':
    case 'drd.config.domain.read':
      return $output['message'];
    case 'drd.actions':
      $actions = (!empty($output['message']) && is_array($output['message'])) ? $output['message'] : array();
      $actions = drupal_array_merge_deep(variable_get('drd_actions', array()), $actions);
      variable_set('drd_actions', $actions);
      break;
    case 'drd.server.domains':
      drd_action_server_domains($server, $output['message']);
      break;
  }
}

/**
 * DRD Action: Set values into the database for Drupal cores and domains.
 *
 * @param string $action_name
 * @param string $mode
 * @param int $id
 * @param string $field
 * @param string $flag
 */
function drd_action_set_value($action_name, $mode, $id, $field, $flag) {
  list($table, $index) = drd_action_params($mode);
  db_update($table)
    ->fields(array($field => $flag))
    ->condition($index, $id)
    ->execute();
}

/**
 * DRD Action: Delete a given Drupal core from the database. Leave the Drupal core
 * itself untouched.
 *
 * @param string $action_name
 * @param string $mode
 * @param int $id
 */
function drd_action_server_delete($action_name, $mode, $id) {
  db_delete('drd_server')
    ->condition('sid', $id)
    ->execute();
  db_delete('drd_domain')
    ->condition('sid', $id)
    ->execute();
}

/**
 * DRD Action helper: Store the received list of domains from the remote
 * Drupal core in the database and remove the ones that no longer exist.
 *
 * @param stdClass $server
 * @param array $domains
 */
function drd_action_server_domains($server, $domains) {
  if (!is_array($domains)) {
    return;
  }
  $current_domains = db_select('drd_domain', 'd')
      ->fields('d', array('did', 'url', 'installed'))
      ->condition('d.sid', $server->sid)
      ->execute()
      ->fetchAll();
  foreach ($current_domains as $current_domain) {
    $current_key = '';
    foreach ($domains as $key => $domain) {
      if ($current_domain->url == $domain['url']) {
        $current_key = $key;
        // Mark the domain, it already exists and we won't add it again
        $domains[$key]['did'] = $current_domain->did;
        if ($domains[$key]['drd installed'] != $current_domain->installed) {
          db_update('drd_domain')
            ->fields(array('installed' => (int)$domains[$key]['drd installed']))
            ->condition('did', $current_domain->did)
            ->execute();
        }
        break;
      }
    }
    if (empty($current_key) || empty($domains[$current_key]['did'])) {
      // Domain doesn't exist anymore, delete it from the database
      db_delete('drd_domain')->condition('did', $current_domain->did)->execute();
      db_delete('drd_domain_alias')->condition('did', $current_domain->did)->execute();
      drd_store_message('server', $server->sid, 'status', t('Domain %url removed', array('%url' => $current_domain->url)));
    }
  }

  // Now save the new domains in the database
  foreach ($domains as $domain) {
    if (empty($domain['did'])) {
      $aliases = $domain['aliases'];
      $domain = array(
        'sid' => $server->sid,
        'name' => $domain['url'],
        'url' => $domain['url'],
        'installed' => $domain['drd installed'],
      );
      drupal_write_record('drd_domain', $domain);
      $domain['aliases'] = $aliases;
      drd_store_message('server', $server->sid, 'status', t('Domain %url added', array('%url' => $domain['url'])));
    }
    $domain['aliases'][] = $domain['url'];
    $aliases = db_select('drd_domain_alias', 'a')
        ->fields('a', array('aid', 'url'))
        ->condition('a.did', $domain['did'])
        ->execute()
        ->fetchAll();
    foreach ($aliases as $alias) {
      $key = array_search($alias->url, $domain['aliases']);
      if ($key === FALSE) {
        db_delete('drd_domain_alias')->condition('aid', $alias->aid)->execute();
      }
      else {
        unset($domain['aliases'][$key]);
      }
    }
    foreach ($domain['aliases'] as $url) {
      $alias = array(
        'did' => $domain['did'],
        'url' => $url,
      );
      drupal_write_record('drd_domain_alias', $alias);
    }
  }
}

/**
 * @param array $form
 * @param array $form_state
 * @param string $mode
 * @param int $id
 * @return array
 */
function drd_action_form($form, &$form_state, $mode, $id) {
  drd_action_build_form($form, $mode, $id);
  return $form;
}

/**
 * @param array $form
 * @param array $form_state
 */
function drd_action_form_submit($form, &$form_state) {
  $ids = array($form['#drd-id']);
  drd_action($form['#drd-mode'], $ids, $_POST['action'], FALSE);
}

/**
 * DRD Action helper: Build a form element to select from available actions.
 *
 * @param array $form
 * @param string $mode
 * @param int $id
 */
function drd_action_build_form(&$form, $mode, $id = 0) {
  $actions = module_invoke_all('drd_actions');

  $class = array('action-block');
  if (empty($id)) {
    $class[] = 'element-hidden';
  }
  else {
    $form['#drd-mode'] = $mode;
    $form['#drd-id'] = $id;
  }
  $form['options'] = array(
    '#type' => 'fieldset',
    '#title' => t('Actions'),
    '#attributes' => array(
      'class' => $class,
    ),
  );

  $options = array('' => '- ' . t('select one') . ' -');
  foreach ($actions as $action => $op) {
    if (isset($op['mode']) && $op['mode'] != $mode) {
      // This is not for us, skip it
      continue;
    }
    $cat = empty($op['category']) ? ('-' . t('Main Actions') . '-') : $op['category'];
    $options[$cat][$action] = $op['label'];
    if (!empty($op['fields'])) {
      $form['options']['drd_action_' . $action] = array(
        '#type' => 'container',
        '#weight' => 0,
        '#states' => array(
          'visible' => array(
            ':input[name="action"]' => array('value' => $action),
          ),
        ),
      );
      foreach ($op['fields'] as $key => $element) {
        if (!empty($element['#markup']) || $element['#type'] != 'hidden') {
          $form['options']['drd_action_' . $action][$key] = $element;
        }
      }
    }
  }
  ksort($options);
  foreach ($options as $key => $option) {
    if (is_array($options[$key])) {
      asort($options[$key]);
    }
  }

  $form['options']['action'] = array(
    '#type' => 'select',
    '#title' => t('Action'),
    '#title_display' => 'invisible',
    '#options' => $options,
    '#default_value' => '',
    '#weight' => -1,
  );
  $form['options']['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Execute'),
    '#weight' => 1,
    '#states' => array(
      'invisible' => array(
        ':input[name="action"]' => array('value' => ''),
      ),
    ),
  );
}

/**
 * DRD Action: Update AES encryption keys on remote Drupal core.
 *
 * @param int $sid
 * @param string $domain_url
 */
function drd_update_aes($sid, $domain_url = '') {
  $result = drd_action_remote('drd.key', 'server', $sid, $domain_url);
  if (!empty($result) && !empty($_GET['drd-extras'])) {
    drd_action_remote('drd.server.domains', 'server', $sid);
  }
  if (isset($_GET['destination']) && isset($_GET['goto'])) {
    drupal_goto();
  }
}

/**
 * DRD Action: Install the module drd_server on a remote Drupal core and provide
 * guidelines on how to get through the setup step by step.
 *
 * @param string $action_name
 * @param string $mode
 * @param int $id
 * @param string $dummy
 * @param string $flag
 * @return bool
 */
function drd_install_drd_server($action_name, $mode, $id, $dummy, $flag) {
  if ($action_name == 'install server') {
    $url = drd_url_by_id('server', $id);
    $mode = 'install';
    $extra = '&server';
    $domain = NULL;
  }
  else {
    $extra = '&domain';
    $domain = drd_domain_load($id);
    if ($flag == $domain->installed) {
      return;
    }
    $server = drd_server_load($domain->sid);
    if (!$server->remoteinstall) {
      drd_set_message($server, 'Skipping domain ' . $id . ': remote installation not supported on this Drupal core.');
      return;
    }
    if (($domain->url === $server->url) && !$flag) {
      drd_set_message($domain, 'Skipping domain ' . $id . ': it is the main domain on this Drupal core.');
      return;
    }

    $mode = ($flag) ? 'install' : 'uninstall';
    $url = drd_url($domain);
  }
  $extra .= '&base_url=' . $url;
  $url .= '/drd_server.install.php?' . $mode . $extra;
  try {
    $result = drupal_http_request($url);
    if ($result->code == 200 && $action_name == 'install server') {
      return $result->data;
    }
    else if ($result->code == 200 && $result->data == ($mode . 'ed')) {
      db_update('drd_domain')
        ->fields(array('installed' => (int)$flag))
        ->condition('did', $id)
        ->execute();
      if ($flag) {
        // Update the aes key on that domain
        drd_install_drd_server_aes($domain);
      }
      return TRUE;
    }
  }
  catch (Exception $e) {
    watchdog_exception('DRD', $e, 'Exception during remote installation or while updating AES keys.');
  }
  if (!isset($result) || !is_object($result)) {
    $result = new stdClass();
    $result->code = 0;
    $result->error = 'unknown';
  }
  drd_set_message($url, t('Error %code occurred for %url: %error', array('%code' => $result->code, '%url' => $url, '%error' => $result->error)), 'error');
  return FALSE;
}

/**
 * @param int|stdClass $domain
 */
function drd_install_drd_server_aes($domain) {
  if (!is_object($domain)) {
    $domain = drd_domain_load($domain);
  }
  drd_update_aes($domain->sid, $domain->url);
}

