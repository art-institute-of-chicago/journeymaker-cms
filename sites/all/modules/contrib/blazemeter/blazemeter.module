function _blazemeter_test_upload_file($script) {
	$testid = variable_get('blazemeter_testid', '-1');
	$api_key = variable_get('blazemeter_userkey', '');
	$server_url = 'https://a.blazemeter.com/api/latest/tests/' . $testid . '/files';
	$headers = array('X-Api-Key: '.$api_key, "Content-Type:multipart/form-data");
	$ch = curl_init();
	curl_setopt($ch, CURLOPT_URL, $server_url);
	curl_setopt($ch, CURLOPT_POST, 1);
	curl_setopt($ch, CURLOPT_POSTFIELDS, $script);
	curl_setopt($ch, CURLOPT_HTTPHEADER, $headers);
	curl_setopt($ch, CURLOPT_SAFE_UPLOAD, FALSE);
	curl_setopt($ch, CURLOPT_RETURNTRANSFER, TRUE);
	curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, FALSE);
	$server_output = curl_exec($ch);
	curl_close ($ch);
	//unlink($file);
}
