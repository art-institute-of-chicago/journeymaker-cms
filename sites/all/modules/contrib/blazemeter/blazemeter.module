function blazemeter_generate_anon_pages_csv($anon_pages) {
	$data_anon = '';
	foreach ($anon_pages['anon_page'] as $anon_page) {
		if(!empty($anon_page)) {
			if($anon_page == "<front>") {
				$anon_page = "<front> - Home page";
			}
		$matches_anon = explode(' - ', $anon_page);
		$system_path_anon = drupal_get_normal_path($matches_anon[0]);
		$path_anon = url(drupal_get_path_alias($system_path_anon), array('absolute' => TRUE));
		$data_anon .= $path_anon . ',' .  $matches_anon[1] . "\r\n";
		}
	}
	if(!empty($anon_pages['anon_page_text'])) {
	$anon_text = explode("\r\n", $anon_pages['anon_page_text']);
	foreach($anon_text as $anon_text_page) {
		$system_path_anon_text = drupal_get_normal_path($anon_text_page);
		$path_anon_text = url(drupal_get_path_alias($system_path_anon_text), array('absolute' => TRUE));
		$data_anon .= $path_anon_text . "\r\n";
