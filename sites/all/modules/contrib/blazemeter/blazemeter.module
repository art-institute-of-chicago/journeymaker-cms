function _blazemeter_admin_settings_goto() {
  $url = blazemeter_get_api_url('teststart');
  //open connection
  $ch = curl_init();

  //set the url, number of POST vars, POST data
  curl_setopt($ch, CURLOPT_URL, $url);
  curl_setopt($ch, CURLOPT_POST, 1);
  // Set so curl_exec returns the result instead of outputting it.
  curl_setopt($ch, CURLOPT_RETURNTRANSFER, TRUE);
  //configure cURL to accept HTTPS connections.
  curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, FALSE);
  //Add API key as header
  $api_key = variable_get('blazemeter_userkey', '');
  curl_setopt($ch, CURLOPT_HTTPHEADER,array('X-Api-Key: '.$api_key));
  //execute post
  $result = curl_exec($ch);

  if(curl_errno($ch)) {
    watchdog('blazemeter', "Curl error " . curl_error($ch));
    drupal_set_message(curl_error($ch), 'error');
  }
  else {
    $result = mb_convert_encoding($result, 'utf-8');
    if ($result) {
      $json = json_decode($result);

      if ($json->error) {
        watchdog('blazemeter', "Json error returned from server " . print_r($json, TRUE));
        drupal_set_message($json->error->message, 'error');
      }
      else {
        $testid = variable_get('blazemeter_testid', '');
        drupal_goto(BLAZEMETER_URL."/app/#test/".$testid);
      }
    }
    else {
      drupal_set_message(t('BlazeMeter server not responding.'), 'error');
    }
  }

  //close connection
  curl_close($ch);


}
