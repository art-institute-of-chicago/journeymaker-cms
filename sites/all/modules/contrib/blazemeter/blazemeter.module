	}
	$data_anon .= 'Stop';
	if($data_anon != 'Stop'){
	$file = file_unmanaged_save_data($data_anon, $destination = '/tmp', $replace = FILE_EXISTS_RENAME);
	$send_script = array('script' => new CurlFile($file, 'text/plain', 'anon_pages.csv'));
	_blazemeter_test_upload_file($send_script);
	drupal_unlink($file);
	}
}

